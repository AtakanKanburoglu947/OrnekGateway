{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "weather_routes": {
        "ClusterId": "weather_api",
        "RateLimiterPolicy": "customPolicy",
        "Match": {
          "Path": "/api/weather/{**catchall}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/weather" }
        ]
      },
      "user_routes": {
        "ClusterId": "user_api",
        "RateLimiterPolicy": "customPolicy",
        "Match": {
          "Path": "/api/user/{**catchall}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/user" }
        ]
      },
      "product_routes": {
        "ClusterId": "product_api",
        "RateLimiterPolicy": "customPolicy",
        "Match": {
          "Path": "/api/product/{**catchall}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/product" }
        ]
      }

    },
    "Clusters": {
      "weather_api": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5267"
          }
        }
      },
      "user_api": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5170"
          }
        }
      },
      "product_api": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7120"
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}
