{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }

  },
  "ReverseProxy": {
    "Routes": {
      "weather_routes": {
        "ClusterId": "weather_api",
        "RateLimiterPolicy": "customPolicy",
        "Match": {
          "Path": "/api/weather/{**catchall}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/weather" }
        ]
      }

    },
    "Clusters": {
      "weather_api": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5267"
          }
        }
      }
    }
  }
}
